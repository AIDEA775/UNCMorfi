<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/set_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/balance_set_name_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

    <EditText
        android:id="@+id/setNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/set_name_title"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:hint="@string/balance_set_name_hint"
        android:importantForAutofill="no"
        android:drawableStart="@drawable/ic_person_black"
        android:drawableLeft="@drawable/ic_person_black" />

    <Button
        android:id="@+id/setNameCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setNameInput"
        android:layout_toLeftOf="@+id/setNameSave"
        android:layout_toStartOf="@+id/setNameSave"
        android:layout_marginTop="8dp"
        android:text="@android:string/cancel"
        android:layout_gravity="end"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <Button
        android:id="@+id/setNameSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setNameInput"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/balance_set_name_save"
        android:layout_gravity="end"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</RelativeLayout>